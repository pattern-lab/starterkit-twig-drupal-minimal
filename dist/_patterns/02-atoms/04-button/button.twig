{#
/**
 * Available variables:
 * - button_base_class - the base class name
 * - modifiers - array of modifiers to add to the base classname
 * - button_blockname - blockname prepended to the base classname
 * - attributes - array of attribute,value pairs
 * - url - the url this button should poing to
 * - content - the content of the button (typically text)
 * - type - use either 'button' or 'a' as a button
 *
 * Available blocks:
 * - button_content - used to replace the content of the button with something other than text
 *   for example: to insert an icon
 */
#}
{% set icon_base_class = icon_base_class|default('icon') %}

{# Choose button or link #}
{% set type = type|default('button') %}
{% if type == 'link' %}
  {% set type = 'a' %}
{% endif %}

<{{ type }} {{ add_attributes(attributes, bem(base_class, (modifiers), blockname, classes)) }}>
{% block content %}
  {{ content }}
{% endblock %}

{% if icon %}
  <i class="{{ icon_base_class }} icon-{{ icon }}"></i>
{% endif %}
</{{ type }}>
