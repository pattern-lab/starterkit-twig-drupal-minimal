{% set type = type|default('status') %}

<div role="contentinfo" class="messages {{ 'messages--' ~ type }}" aria-label="{{ status_headings[type]}}" {{ attributes.addClass(classes)|without('role', 'aria-label')}}>
  {% if type == 'error' %}
  <div role="alert">
    {% endif %}
    {% if status_headings[type] %}
      <h2 class="visually-hidden">{{ status_headings[type] }}</h2>
    {% endif %}
    {% if data is iterable %}
      <ul class="messages__list">
        {% for item in data %}
          <li class="messages__item">{{ item }}</li>
        {% endfor %}
      </ul>
    {% else %}
      {{ data }}
    {% endif %}
    {% if type == 'error' %}
  </div>
  {% endif %}
</div>
{# Remove type specific classes. #}
  {% set attributes = attributes.removeClass(classes) %}
